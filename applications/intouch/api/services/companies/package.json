{
  "name": "@bmi/intouch-api-service-companies",
  "version": "0.0.0",
  "main": "src/index.ts",
  "description": "BMI InTouch Companies GraphQL API",
  "license": "BMI-DXB",
  "private": true,
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "dev": "tsc --build && concurrently \"tsc -w\" \"nodemon dist/index.js\" \"yarn prettify-schema:watch\"",
    "gcp-build": "tsc",
    "migrate-db": "node scripts/init-db.js",
    "prettify-schema": "prettier --write schema.graphql",
    "prettify-schema:watch": "onchange \"schema.graphql\" -- yarn prettify-schema",
    "start": "node dist/index.js",
    "test": "jest --reporters=default --reporters=jest-junit",
    "coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@bmi-digital/logger": "0.0.9",
    "@google-cloud/pubsub": "^2.10.0",
    "@google-cloud/secret-manager": "^3.7.1",
    "@google-cloud/storage": "^5.7.0",
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "@graphile/federation": "^0.0.3",
    "@graphql-tools/utils": "^8.0.0",
    "apollo-server": "^3.1.2",
    "auth0": "^2.33.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "camelcase-keys": "^6.2.2",
    "cross-fetch": "^3.1.4",
    "crypto": "^1.0.1",
    "csv-parse": "^4.16.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "fast-csv": "^4.3.6",
    "google-auth-library": "^7.5.0",
    "graphile-utils": "^4.12.1",
    "graphql": "^15.5.0",
    "graphql-upload": "^12.0.0",
    "jwks-rsa": "^1.12.3",
    "lodash.camelcase": "^4.3.0",
    "pg": "^8.5.1",
    "pg-format": "^1.0.4",
    "postgraphile": "^4.12.3",
    "postgraphile-apollo-server": "0.1.1",
    "postgraphile-plugin-connection-filter": "^2.2.1",
    "postgraphile-plugin-nested-mutations": "^1.1.0",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "latest",
    "onchange": "^7.1.0"
  }
}
