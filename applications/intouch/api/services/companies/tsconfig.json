{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "ES5",
      "ES6",
      "ESNext",
      "DOM",
      "ES2019"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@bmi/*": [
        "../../../../../node_modules/@bmi/*/src"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../../../../node_modules/@types",
      "../../../../../@types",
      "./src/types/**/*.d.ts",
    ]
  },
  "references": [
    {
      "path": "../../../../../libraries/logger"
    }
  ],
  "exclude": [
    "**/dist/**"
  ]
}
