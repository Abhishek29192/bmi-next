{
  "name": "@bmi/intouch-api-service-training",
  "version": "0.0.0",
  "main": "src/index.ts",
  "description": "BMI InTouch Training GraphQL API",
  "license": "BMI-DXB",
  "private": true,
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "dev": "tsc --build && concurrently \"tsc -w\" \"nodemon dist/index.js\" \"yarn prettify-schema:watch\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "migrate-db": "node scripts/init-db.js",
    "prettify-schema": "prettier --write schema.graphql",
    "prettify-schema:watch": "onchange \"schema.graphql\" -- yarn prettify-schema",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@bmi-digital/logger": "0.0.11",
    "@bmi-digital/tsconfig": "^1.3.0",
    "@google-cloud/secret-manager": "^3.7.1",
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "@graphile/federation": "^0.0.3",
    "@graphql-tools/utils": "^8.6.2",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-datasource-rest": "^0.10.0",
    "apollo-server": "^3.1.2",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "graphile-utils": "^4.10.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "postgraphile": "^4.11.0",
    "postgraphile-apollo-server": "0.1.1",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "latest",
    "onchange": "^7.1.0"
  }
}
