{
  "name": "@bmi/intouch-api-service-training",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "BMI-DXB",
  "description": "BMI InTouch Training GraphQL API",
  "private": true,
  "scripts": {
    "dev": "tsc -b && concurrently \"tsc -w\" \"nodemon dist/index.js\" \"yarn prettify-schema\"",
    "build": "tsc -b",
    "migrate-db": "node scripts/init-db.js",
    "prettify-schema": "onchange \"schema.graphql\" -- prettier --write schema.graphql",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@bmi/logger": "0.0.0",
    "@google-cloud/secret-manager": "^3.7.1",
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "@graphile/federation": "^0.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-datasource-rest": "^0.10.0",
    "apollo-server": "^2.19.2",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "graphile-utils": "^4.10.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "postgraphile": "^4.11.0",
    "postgraphile-apollo-server": "0.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.20",
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "nodemon": "latest",
    "onchange": "^7.1.0",
    "typescript": "^3.9.3"
  }
}
