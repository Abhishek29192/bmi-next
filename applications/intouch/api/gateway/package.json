{
  "name": "@bmi/intouch-api-gateway",
  "version": "1.0.0",
  "description": "BMI InTouch GraphQL API GateWay",
  "license": "BMI-DXB",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:prettify": "yarn codegen && prettier --write schema.graphql ../types/index.d.ts",
    "dev": "yarn codegen:prettify && tsc --build && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@apollo/federation": "^0.27.0",
    "@apollo/gateway": "^0.34.0",
    "@bmi-digital/logger": "0.0.11",
    "@bmi-digital/tsconfig": "^1.3.0",
    "@google-cloud/secret-manager": "^3.8.1",
    "@graphql-tools/delegate": "^7.1.5",
    "@graphql-tools/wrap": "^7.0.8",
    "@profusion/apollo-federation-upload": "^2.2.3",
    "apollo-server": "^3.1.2",
    "apollo-server-express": "3.0.2",
    "axios": "^0.21.4",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-playground-middleware-express": "^1.7.22",
    "graphql-transform-federation": "^2.2.0",
    "graphql-upload": "^12.0.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.0",
    "@graphql-codegen/schema-ast": "^2.0.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "concurrently": "^6.2.0"
  }
}
