{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@bmi/*": [
        "../../../node_modules/@bmi/*/src",
        "./node_modules/@bmi/*/src"
      ]
    },
    "allowJs": false,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["**/dist/**", "node_modules"]
}
