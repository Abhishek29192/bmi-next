# @name Pages search request
@term=Icopal
POST {{esHost}}/{{pagesIndex}}/_search
Content-Type: application/json
Authorization: ApiKey {{esApiKey}}

{
  "size": 10,
  "from": 0,
  "_source": {
    "excludes": [
      "pageData"
    ]
  },
  "aggs": {
    "tags": {
      "terms": {
        "size": "100",
        "field": "tags.title.keyword"
      }
    }
  },
  "query": {
    "bool": {
      "must": [
        {
          "query_string": {
            "query": "*{{term}}*",
            "type": "cross_fields",
            "fields": [
              "pageData"
            ]
          }
        }
      ]
    }
  }
}

