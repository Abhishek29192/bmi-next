{
  "extends": "../../../tsconfig.common.json",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": false
  },
  "references": [
    {
      "path": "../libraries/fetch-retry"
    },
    {
      "path": "../libraries/gatsby-plugin-elasticsearch"
    },
    {
      "path": "../libraries/gatsby-plugin-google-tagmanager"
    },
    {
      "path": "../libraries/gatsby-plugin-leadoo"
    },
    {
      "path": "../libraries/gatsby-source-docebo"
    },
    {
      "path": "../libraries/gatsby-source-firestore"
    },
    {
      "path": "../libraries/microcopies"
    },
    {
      "path": "../libraries/utils"
    },
    {
      "path": "../libraries/docebo-types"
    },
    {
      "path": "../libraries/elasticsearch-types"
    },
    {
      "path": "../libraries/firestore-types"
    }
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
