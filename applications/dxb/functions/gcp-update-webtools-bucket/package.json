{
  "name": "@bmi/gcp-update-webtools-bucket",
  "version": "0.0.0",
  "license": "BMI-DXB",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build && functions-framework --source=dist --target=handleRequest --port=9058",
    "deploy": "yarn build && gcloud functions deploy pim-full-fetch --trigger-http --runtime=nodejs14 --allow-unauthenticated --max-instances=1 --region=europe-west3 --entry-point=handleRequest --env-vars-file=env.yaml",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^3.7.1",
    "@google-cloud/storage": "^5.7.0",
    "joi": "^17.4.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1"
  }
}
