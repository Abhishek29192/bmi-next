{
  "name": "@bmi/gcp-build-trigger",
  "version": "0.0.0",
  "license": "BMI-DXB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit",
    "dev": "yarn build && js-yaml ./.env.yaml > ./.env.json && env-cmd -r ./.env.json functions-framework --source=dist --target=build --port=9057",
    "deploy": "yarn build && gcloud functions deploy build-trigger --trigger-http --runtime=nodejs10 --allow-unauthenticated --max-instances=1 --region=europe-west3 --entry-point=build --env-vars-file=env.yaml"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@google-cloud/monitoring": "^2.3.2",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest-when": "^3.2.0",
    "js-yaml": "^4.0.0"
  }
}
