{
  "name": "@bmi/gcp-build-trigger",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "build": "run compile && webpack --mode=production",
    "compile": "tsc --build",
    "test": "jest --coverage --reporters=default --reporters=jest-junit",
    "dev": "yarn build && js-yaml ./.env.yaml > ./.env.json && env-cmd -r ./.env.json functions-framework --source=dist/dist/function --target=build --port=9057",
    "dev:top": "yarn build && js-yaml ./.env.yaml > ./.env.json && env-cmd -r ./.env.json process-top $(yarn bin functions-framework) --source=dist/dist/function --target=build --port=9057",
    "lint": "eslint \"**/*.{js,ts,tsx}\""
  },
  "dependencies": {
    "@bmi-digital/functions-logger": "^1.6.0",
    "@bmi/functions-contentful-client": "workspace:*",
    "@bmi/functions-es-client": "workspace:*",
    "@bmi/utils": "workspace:*",
    "@google-cloud/functions-framework": "^3.2.0",
    "@google-cloud/monitoring": "^3.0.4",
    "node-fetch": "^2.6.11"
  },
  "devDependencies": {
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "copy-webpack-plugin": "^11.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
    "generate-package-json-webpack-plugin": "^2.6.0",
    "inspectpack": "^4.7.1",
    "jest": "^29.5.0",
    "jest-when": "^3.5.2",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "process-top": "^1.2.0",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.1.1"
  }
}
