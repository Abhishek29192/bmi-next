{
  "name": "@bmi/gcp-apsis-integration",
  "private": true,
  "version": "0.0.0",
  "license": "BMI-DXB",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build && js-yaml ./.env.yaml > ./.env.json && env-cmd -r ./.env.json functions-framework --source=dist --target=optInEmailMarketing --port=9050",
    "deploy": "yarn build && gcloud functions deploy form-submit --trigger-http --runtime=nodejs14 --allow-unauthenticated --max-instances=5 --region=europe-west3 --entry-point=optInEmailMarketing --env-vars-file=env.yaml",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@google-cloud/secret-manager": "^3.4.0",
    "node-fetch": "^2.6.1"
  }
}
