{
  "name": "@bmi/es-pim-system-ingest",
  "private": true,
  "version": "0.0.0",
  "license": "BMI-DXB",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build && js-yaml ./.env.yaml > ./.env.json && env-cmd -r ./.env.json functions-framework --source=dist --signature-type=event --target=handleMessage",
    "deploy": "gcloud functions deploy pimtodxb-fakelogstash-dev-euwest3 --trigger-topic=dxb-pim-transitional --runtime=nodejs14 --allow-unauthenticated --max-instances=5 --region=europe-west3 --entry-point=handleMessage --env-vars-file=env.yaml",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.8.0",
    "@google-cloud/functions-framework": "^1.7.1",
    "@google-cloud/pubsub": "^0.18.0",
    "@google-cloud/secret-manager": "^3.7.1",
    "lodash": "^4.17.21"
  }
}
