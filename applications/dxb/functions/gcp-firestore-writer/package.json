{
  "name": "@bmi/gcp-firestore-writer",
  "private": true,
  "version": "0.0.0",
  "license": "UNLICENSED",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run compile && webpack --mode=production",
    "compile": "tsc --build",
    "dev": "yarn build && env-cmd functions-framework --source=dist --signature-type=event --target=handleMessage --port=8080",
    "debug": "webpack --mode=development && env-cmd node --inspect $(yarn bin )/functions-framework --source=dist --target=handleMessage --signature-type=event --port 8090",
    "dev:top": "yarn build && env-cmd process-top $(yarn bin functions-framework) --source=dist/dist/function --target=handleMessage",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@bmi-digital/functions-logger": "^1.7.6",
    "@bmi/functions-firestore": "workspace:*",
    "@bmi/pim-transformation": "workspace:*",
    "@bmi/utils": "workspace:*",
    "@google-cloud/functions-framework": "^3.3.0",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@bmi/firestore-types": "workspace:*",
    "@bmi/pim-types": "workspace:*",
    "@bmi/pub-sub-types": "workspace:*",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.13.0",
    "inspectpack": "^4.7.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.1.1",
    "process-top": "^1.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "yalc": "^1.0.0-pre.53"
  }
