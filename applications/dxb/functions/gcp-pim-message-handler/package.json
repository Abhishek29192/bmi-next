{
  "name": "@bmi/gcp-pim-message-handler",
  "version": "0.0.0",
  "license": "BMI-DXB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build && functions-framework --source=dist --target=handleRequest --port=9056",
    "deploy": "yarn build && gcloud functions deploy pim-message-handler --trigger-http --runtime=nodejs14 --allow-unauthenticated --max-instances=1 --region=europe-west3 --entry-point=handleRequest --env-vars-file=env.yaml",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^2.5.0",
    "@google-cloud/secret-manager": "^3.7.1",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1"
  }
}
