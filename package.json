{
  "name": "@bmi/main",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "applications/**",
    "components/**",
    "libraries/**",
    "tools/**"
  ],
  "scripts": {
    "dev": "yarn workspace @bmi/head run dev",
    "start": "yarn workspace @bmi/head run start",
    "build": "tsc",
    "build:head": "yarn workspace @bmi/head run build",
    "build:frc-website": "yarn workspace @bmi/frc-website run build",
    "coverage:jest": "jest --coverage",
    "coverage:ts": "typescript-coverage-report",
    "workbench": "styleguidist server",
    "workbench:build": "styleguidist build",
    "run-apollo": "yarn workspace @bmi/apollo-server run start",
    "migrate": "yarn workspace @bmi/migrate start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@bmi/create-component-package": "0.0.0",
    "@bmi/migrate": "0.0.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "jest-css-modules-transform": "^4.0.1",
    "jest-mock-console": "^1.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "11.0.8",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "typescript-coverage-report": "^0.1.3",
    "webpack": "^4.43.0"
  },
  "dependencies": {
    "react-docgen-typescript": "^1.18.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0"
  }
