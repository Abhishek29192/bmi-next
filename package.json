{
  "name": "@bmi/main",
  "version": "0.0.0",
  "private": true,
  "license": "BMI-DXB",
  "main": "index.js",
  "workspaces": [
    "applications/**",
    "components/**",
    "functions/**",
    "libraries/**",
    "tools/**"
  ],
  "scripts": {
    "dev": "yarn workspace @bmi/head run dev",
    "dev:intouch-frontend": "yarn workspace @bmi/intouch-frontend run dev",
    "start": "yarn workspace @bmi/head run start",
    "start:intouch-frontend": "yarn workspace @bmi/intouch-frontend run start",
    "clean:head": "yarn workspace @bmi/head run clean",
    "build": "tsc",
    "build:head": "yarn workspace @bmi/head run build",
    "build:frc-website": "yarn workspace @bmi/frc-website run build",
    "build:intouch-frontend": "yarn workspace @bmi/intouch-frontend run build",
    "coverage:components": "jest --coverage --config=components/jest.config.js --reporters=default --reporters=jest-junit",
    "coverage:jest": "jest --coverage --reporters=default --reporters=jest-junit",
    "coverage:ts": "typescript-coverage-report",
    "test:intouch-frontend": "jest --testPathPattern=\"applications/intouch/frontend\" --reporters=default --reporters=jest-junit",
    "test:intouch-api": "jest --testPathPattern=\"applications/intouch/api\" --reporters=default --reporters=jest-junit",
    "test:intouch-api:company": "jest --testPathPattern=\"applications/intouch/api/services/companies\" --reporters=default --reporters=jest-junit",
    "workbench": "styleguidist server",
    "workbench:build": "styleguidist build",
    "run-apollo": "yarn workspace @bmi/apollo-server run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@bmi/build-contentful": "0.0.0",
    "@bmi/create-component-package": "0.0.0",
    "@bmi/migrate": "0.0.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@graphql-codegen/cli": "^1.21.3",
    "@lhci/cli": "^0.7.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/gitlab": "^6.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@testing-library/react": "^10.0.4",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.14.10",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.13",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.2.2",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "^1.4.0",
    "fetch-mock-jest": "^1.5.1",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "jest-css-modules-transform": "^4.0.1",
    "jest-junit": "^12.0.0",
    "jest-mock-console": "^1.0.1",
    "lint-staged": "^10.2.6",
    "netlify-cli": "^3.15.2",
    "prettier": "^2.0.5",
    "process-top": "^1.2.0",
    "puppeteer": "^7.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "11.1.6",
    "semantic-release": "17.3.6",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "typescript-coverage-report": "^0.1.3"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "react-docgen-typescript": "^1.18.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^5.33.2"
  }
}
