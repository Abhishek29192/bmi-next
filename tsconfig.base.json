{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["ES5", "ES6", "ESNext", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "inlineSourceMap": true
  },
  "exclude": [
    "**/__tests__/**"
  ]
}
