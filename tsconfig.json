{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["ES5", "ES6", "ESNext", "DOM", "ES2019"],
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": {
      "@bmi/*": ["./node_modules/@bmi/*/src"],
      "@bmi-digital/components": ["./node_modules/@bmi-digital/components/src"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["**/dist/**"]
}
