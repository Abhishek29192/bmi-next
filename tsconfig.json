{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["ES5", "ES6", "ESNext", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@bmi/*": ["./node_modules/@bmi/*/src"]
    }
  },
  "exclude": ["**/__tests__/**", "**/dist/**"]
}
