#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

yarn lint-staged
yarn yalc check
yarn install --frozen-lockfile
find . -type d -name 'node_modules' -prune -false -o -type f -name 'yarn.lock' | sort | xargs sha1sum -b > modules-sha
git add modules-sha
# Needed only until we can use upstream fixes or we take this into our own setup properly
yarn workspace @bmi/gatsby-plugin-sitemap build
# Needed only until we can use upstream fixes or we take this into our own setup properly
yarn workspace @bmi/gatsby-plugin-google-tagmanager build
